<?xml version="1.0"?>
<launch>

  <node name="slave_controller" pkg="haptic_teleoperation" type="controller_ros" output="screen">
    <rosparam command="load" file="$(find haptic_teleoperation)/config/slave_controller_params.yaml" />
    <rosparam command="load" file="$(find haptic_teleoperation)/config/slave_params.yaml" />
    <rosparam command="load" file="$(find haptic_teleoperation)/config/master_params.yaml" />
    <remap from="/cmd_vel" to="/RosAria/cmd_vel"/>
    <remap from="/pose" to="/RosAria/pose"/>
  </node>

  <node name="master_controller" pkg="haptic_teleoperation" type="controller_ros" output="screen">
    <rosparam command="load" file="$(find haptic_teleoperation)/config/slave_params.yaml" />
    <rosparam command="load" file="$(find haptic_teleoperation)/config/master_controller_params.yaml" />
    <rosparam command="load" file="$(find haptic_teleoperation)/config/master_params.yaml" />
  </node>


  <node name="force_field" pkg="haptic_teleoperation" type="force_field" output="screen">
    <rosparam command="load" file="$(find haptic_teleoperation)/config/force_field_params.yaml" />
    <remap from="/cmd_vel" to="/RosAria/cmd_vel"/>
  </node>

 <node name="laser2pointcloud" pkg="haptic_teleoperation" type="laser2pointcloud" output="screen">
    <remap from="/laserscan" to="/Pioneer3AT/laserscan"/>
    <remap from="base_link" to="/Pioneer3AT/base_link"/>
  </node>

  <!--<node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" output="screen"/>-->
  <!--<node name="rviz" pkg="rviz" type="rviz" args="-d $(find haptic_teleoperation)/rviz/config.rviz" required="true" />-->
</launch>
